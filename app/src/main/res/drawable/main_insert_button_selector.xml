<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <solid android:color="#00e676" />
            <stroke android:width="2dp" android:color="#11998e" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="@color/mainDbButtonsOuterStrokeColorAmber50" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                    <gradient android:angle="90" android:endColor="#00e676" android:startColor="#11998e" android:type="linear" />
                    <stroke android:width="1dp" android:color="#11998e" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>